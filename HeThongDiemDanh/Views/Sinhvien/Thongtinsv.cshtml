@model HeThongDiemDanh.Models.NGUOIDUNG
@{
    ViewBag.Title = "Thongtinsv";
    Layout = "~/Views/Shared/_LayoutSinhvien.cshtml";
}

<div class="container" style="margin-top: 2em; margin-bottom: 2em;">
    <form method="POST">
        <div class="row">
            <div class="form-group col-md-4">
                <label for="inputMaso4"> Mã số:</label>
                <input type="text" class="form-control" id="inputMaso4" value="@Model.MASONGUOIDUNG">
            </div>
            <div class="form-group col-md-4">
                <label for="inputName4">Họ Tên:</label>
                <input type="text" class="form-control" id="inputName4" value="@Model.TENNGUOIDUNG">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                <label for="inputDate4">Ngày Sinh:</label>
                <input type="date" class="form-control" id="inputDate4" value="@Model.NGAYSINH">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPhone4">Số điện thoại:</label>
                <input type="text" class="form-control" id="inputPhone4" value="@Model.SODIENTHOAI">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Email:</label>
                <input type="text" class="form-control" id="inputEmail4" value="@Model.EMAIL">
            </div>
            <div class="form-group col-md-4">
                <label for="inputDiachi4">Địa chỉ:</label>
                <input type="text" class="form-control" id="inputDiachi4" value="@Model.DIACHI">
            </div>
        </div>

        <div class="row" style="margin-top:2em; text-align:center">
            <button type="submit" class="btn btn-primary">Lưu Thông Tin</button>
        </div>

    </form>
</div>

