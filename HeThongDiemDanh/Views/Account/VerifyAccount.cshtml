
@{
    ViewBag.Title = "VerifyAccount";
}

<h2>VerifyAccount</h2>
@if(ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <div>
        <strong>Success!</strong> Your account has been activated seccessfully. Click here to @Html.ActionLink("Login", "Login", "Account");
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.Message
    </div>
}

