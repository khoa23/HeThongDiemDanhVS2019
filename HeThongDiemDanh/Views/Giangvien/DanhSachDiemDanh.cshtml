@model IEnumerable<HeThongDiemDanh.Models.DanhSachDiemDanh>
@{
    ViewBag.Title = "DanhSachDiemDanh";

    Layout = "~/Views/Shared/_LayoutGiangvien.cshtml";
}
@*lấy dữ liệu trong Model*@
<h2>Danh sách lớp</h2>
<table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th>STT</th>
            <th>MSSV</th>
            <th>Họ tên</th>
            <th>1</th>
            <th>2</th>
            <th>3</th>
            <th>4</th>
            <th>5</th>
            <th>6</th>
            <th>7</th>
            <th>8</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    @Html.Raw(item.nguoidung.MASONGUOIDUNG)

                </td>
                <td>@Html.Raw(item.nguoidung.TENNGUOIDUNG)</td>
                <td>

                    <input @(Convert.ToBoolean(item.diemdanhsv.lan1) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan2) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan3) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan4) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan5) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan6) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan7) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
                <td>
                    <input @(Convert.ToBoolean(item.diemdanhsv.lan8) == true ? "checked='checked'" : string.Empty) type="checkbox" />
                </td>
            </tr>
        }
    </tbody>
</table>